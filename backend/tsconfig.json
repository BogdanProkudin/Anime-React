{
  "compilerOptions": {
    "target": "es5", // Версия JavaScript, на которую будет производиться компиляция
    "module": "commonjs", // Формат модулей, используемый в проекте (commonjs, es6, umd, и т.д.)
    "outDir": "dist", // Каталог, в который будут сохраняться скомпилированные файлы
    "strict": true, // Включение строгого режима проверки типов
    "esModuleInterop": true, // Разрешение использования модулей CommonJS с оператором импорта/экспорта
    "skipLibCheck": true, // Пропуск проверки файлов объявлений типов из установленных пакетов
    "forceConsistentCasingInFileNames": true // Обеспечение согласованного регистра имен файлов
  }
}
